<Window x:Class="Surf_Clean.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Surf_Clean"
        xmlns:views="clr-namespace:Surf_Clean.Views"
        xmlns:views1="clr-namespace:Surf_Clean.Surf_Clean.Views"
        mc:Ignorable="d"
        Title="SurfClean" Height="700" Width="1000"
        Background="#EEF8FC">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#00BCD4" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="🏄‍♂️ SurfClean" FontSize="22" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="DashboardButton" Content="SurfBoard" Style="{StaticResource NavButtonStyle}" Click="NavigationButton_Click"/>
                    <Button x:Name="ScannerButton" Content="WaveWash" Style="{StaticResource NavButtonStyle}" Click="NavigationButton_Click"/>
                    <Button x:Name="BrowserButton" Content="Surf" Style="{StaticResource ActiveNavButtonStyle}" Click="NavigationButton_Click"/>
                    <Button x:Name="SettingsButton" Content="Gear" Style="{StaticResource NavButtonStyle}" Click="NavigationButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <!-- Dashboard Page -->
            <Grid x:Name="DashboardPage" Visibility="Collapsed">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="SurfBoard" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#006064"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Privacy Score -->
                        <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="5" Padding="15" Effect="{StaticResource StandardShadow}">
                            <StackPanel>
                                <TextBlock Text="Wave Score" FontWeight="Bold" FontSize="16" Foreground="#006064"/>
                                <TextBlock Text="92/100" FontSize="36" FontWeight="Bold" Foreground="#00BCD4" Margin="0,10"/>
                                <TextBlock Text="Your surfing is clean and protected" TextWrapping="Wrap" Margin="0,5" Foreground="#757575"/>
                            </StackPanel>
                        </Border>

                        <!-- Trackers Blocked -->
                        <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="5" Padding="15" Effect="{StaticResource StandardShadow}">
                            <StackPanel>
                                <TextBlock Text="Wipeouts Prevented" FontWeight="Bold" FontSize="16" Foreground="#006064"/>
                                <TextBlock Text="246" FontSize="36" FontWeight="Bold" Foreground="#00BCD4" Margin="0,10"/>
                                <TextBlock Text="Since you installed SurfClean" TextWrapping="Wrap" Margin="0,5" Foreground="#757575"/>
                            </StackPanel>
                        </Border>

                        <!-- Privacy Status -->
                        <Border Grid.Column="2" Background="White" CornerRadius="8" Margin="5" Padding="15" Effect="{StaticResource StandardShadow}">
                            <StackPanel>
                                <TextBlock Text="Surf Conditions" FontWeight="Bold" FontSize="16" Foreground="#006064"/>
                                <TextBlock Text="Excellent" FontSize="36" FontWeight="Bold" Foreground="#00BCD4" Margin="0,10"/>
                                <TextBlock Text="All cleaning features are active" TextWrapping="Wrap" Margin="0,5" Foreground="#757575"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Border Grid.Row="2" Background="White" CornerRadius="8" Margin="0,20,0,0" Padding="20" Effect="{StaticResource StandardShadow}">
                        <TextBlock Text="This is your SurfBoard - the dashboard for SurfClean. In a full implementation, this would show detailed cleaning statistics and surf conditions for your web experience." TextWrapping="Wrap" Foreground="#757575"/>
                    </Border>
                </Grid>
            </Grid>

            <!-- Scanner Page -->
            <Grid x:Name="ScannerPage" Visibility="Collapsed">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Scanner Title -->
                    <TextBlock Grid.Row="0" Text="WaveWash Scanner" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#006064"/>

                    <!-- Scanner Controls -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                        <TextBlock Text="Scan your system for tracking elements and wash them away for a cleaner browsing experience" 
                                TextWrapping="Wrap" Margin="0,0,0,10" Foreground="#757575"/>

                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <Button Content="Start Washing" Command="{Binding StartScanCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
                            <Button Content="Stop Washing" Command="{Binding StopScanCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
                            <Button Content="Clear Results" Command="{Binding ClearResultsCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" Background="#E0F7FA" Padding="10" CornerRadius="4" Margin="0,0,0,10" VerticalAlignment="Top" Effect="{StaticResource StandardShadow}">
                        <StackPanel>
                            <TextBlock Text="{Binding StatusMessage}" FontWeight="SemiBold" Foreground="#006064"/>
                            <ProgressBar Height="5" IsIndeterminate="{Binding IsScanActive}" 
                                        Margin="0,5,0,0" Background="Transparent"
                                        Foreground="#00BCD4" BorderThickness="0"/>
                        </StackPanel>
                    </Border>

                    <!-- Results List -->
                    <ListView Grid.Row="2" ItemsSource="{Binding DetectedTrackers}" BorderThickness="1" 
                              BorderBrush="#E0E0E0" Margin="0,60,0,0" Background="White"
                              Effect="{StaticResource StandardShadow}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Tracker Name" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Type" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Type}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Risk Level" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse Width="10" Height="10" Fill="{Binding RiskBrush}" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding RiskLevel}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Location" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Location}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Actions" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Delete" Padding="8,2" Margin="0,0,5,0" Background="#FF5722" Foreground="White" BorderThickness="0"/>
                                                <Button Content="Block" Padding="8,2" Background="#00BCD4" Foreground="White" BorderThickness="0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Summary -->
                    <Border Grid.Row="3" Background="#E0F7FA" Padding="10" Margin="0,10,0,0" CornerRadius="4">
                        <StackPanel>
                            <TextBlock Foreground="#006064">
                                <Run Text="Total tracking elements found: "/>
                                <Run Text="{Binding TrackerCount}" FontWeight="Bold" Foreground="#00838F"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <!-- Browser Page -->
            <Grid x:Name="BrowserPage" Visibility="Visible">
                <views1:WebBrowserView />
            </Grid>

            <!-- Settings Page -->
            <Grid x:Name="SettingsPage" Visibility="Collapsed">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Surf Gear" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#006064"/>

                    <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20" Effect="{StaticResource StandardShadow}">
                        <StackPanel>
                            <TextBlock Text="Surf Protection Settings" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" Foreground="#006064"/>

                            <CheckBox Content="WaveWash - Block tracking requests" IsChecked="True" Margin="0,5" Foreground="#212121"/>
                            <TextBlock Text="Prevents websites from tracking your activities" 
                                     Margin="25,0,0,10" Foreground="#757575"/>

                            <CheckBox Content="SandScrubber - Clean cookies" IsChecked="True" Margin="0,5" Foreground="#212121"/>
                            <TextBlock Text="Remove cookies that track you between websites" 
                                     Margin="25,0,0,10" Foreground="#757575"/>

                            <CheckBox Content="CoralGuard - Prevent fingerprinting" IsChecked="True" Margin="0,5" Foreground="#212121"/>
                            <TextBlock Text="Stop websites from identifying your browser's unique characteristics" 
                                     Margin="25,0,0,10" Foreground="#757575"/>

                            <CheckBox Content="TideSignal - Send 'Do Not Track'" IsChecked="True" Margin="0,5" Foreground="#212121"/>
                            <TextBlock Text="Signal to websites that you prefer not to be tracked" 
                                     Margin="25,0,0,10" Foreground="#757575"/>

                            <TextBlock Text="About SurfClean" FontWeight="Bold" FontSize="18" Margin="0,20,0,10" Foreground="#006064"/>
                            <TextBlock TextWrapping="Wrap" Foreground="#757575">
                                SurfClean version 1.0.0<LineBreak/>
                                Clean browsing, clear conscience<LineBreak/>
                                Created by Konrad Walsh
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#E0F7FA" Padding="20,10">
            <TextBlock Text="SurfClean - Where the web washes clean" 
                     HorizontalAlignment="Center" Foreground="#006064"/>
        </Border>
    </Grid>

</Window>